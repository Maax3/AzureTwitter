{
	"name": "dataflow_process",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_original_data",
						"type": "DatasetReference"
					},
					"name": "origindata"
				},
				{
					"dataset": {
						"referenceName": "ds_new_data",
						"type": "DatasetReference"
					},
					"name": "newdata"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_final_data",
						"type": "DatasetReference"
					},
					"name": "guardado"
				}
			],
			"transformations": [
				{
					"name": "Join"
				},
				{
					"name": "deleteDuplicates",
					"description": "Eliminacion de duplicados resultantes del join"
				},
				{
					"name": "addPrimaryKey",
					"description": "Nueva primary key"
				}
			],
			"scriptLines": [
				"parameters{",
				"     nombre_fichero as string",
				"}",
				"source(output(",
				"          user_id as string,",
				"          username as string,",
				"          id as string,",
				"          created_at_datetime as string,",
				"          text as string,",
				"          lang as string,",
				"          reply_count as string,",
				"          retweet_count as string,",
				"          favorite_count as string,",
				"          view_count as string,",
				"          location as string,",
				"          hashtags as string,",
				"          in_reply_to as string,",
				"          quote as string,",
				"          quote_count as string,",
				"          possibly_sensitive as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> origindata",
				"source(output(",
				"          id as string,",
				"          location as string,",
				"          latitud as string,",
				"          longitud as string,",
				"          temas as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> newdata",
				"origindata, newdata join(origindata@id == newdata@id,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> Join",
				"Join select(mapColumn(",
				"          user_id,",
				"          username,",
				"          id = origindata@id,",
				"          created_at_datetime,",
				"          text,",
				"          lang,",
				"          reply_count,",
				"          retweet_count,",
				"          favorite_count,",
				"          view_count,",
				"          location = origindata@location,",
				"          hashtags,",
				"          in_reply_to,",
				"          quote,",
				"          quote_count,",
				"          possibly_sensitive,",
				"          id = newdata@id,",
				"          location = newdata@location,",
				"          latitud,",
				"          longitud,",
				"          temas",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> deleteDuplicates",
				"deleteDuplicates keyGenerate(output(primaryID as long),",
				"     startAt: 1L,",
				"     stepValue: 1L) ~> addPrimaryKey",
				"addPrimaryKey sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:[($nombre_fichero)],",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> guardado"
			]
		}
	}
}