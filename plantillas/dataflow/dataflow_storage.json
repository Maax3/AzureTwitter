{
	"name": "dataflow_storage",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "output_csv_files",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "storage_files",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [],
			"scriptLines": [
				"source(output(",
				"          user_id as long,",
				"          username as string,",
				"          tweet_id as long,",
				"          created_at as string,",
				"          retweet_count as integer,",
				"          likes as integer,",
				"          view_count as double,",
				"          hashtags as string,",
				"          text as string,",
				"          location as string,",
				"          temas as string,",
				"          latitud as double,",
				"          longitud as double,",
				"          URL as string,",
				"          sentiment_score as double,",
				"          sentiment_result as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     inferDriftedColumnTypes: true,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     filePattern:'empresa[n].csv',",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sink1"
			]
		}
	}
}