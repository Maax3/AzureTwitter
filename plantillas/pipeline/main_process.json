						{
							"name": "ALTER TABLE",
							"description": "Modifica las columnas para establecer una clave primaria",
							"type": "SqlServerStoredProcedure",
							"dependsOn": [
								{
									"activity": "Copy data to SQL",
									"dependencyConditions": [
										"Succeeded"
									]
								}
							],
